@import "./styles/iconfont.wxss";

/* 在微信小程序中 不支持 通配符 */

page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 
  主题颜色通过一个变量来实现
  1 less 中 存在变量这个知识
  2 原声的css 和 wxss也是支持变量的
*/

page{
  /* 定义主题颜色 */
  --themeColor:#eb4450;
  /* 定义统一的字体大小  
      假设设计稿是 375px
      1px = 2rpx
  */
  font-size: 28rpx;
}

image{
  width: 100%;
}
