.revice_address_row .address_btn {
  padding: 20rpx;
}
.revice_address_row .address_btn button {
  width: 60%;
}
.address_detail {
  display: flex;
  padding: 20rpx;
}
.address_detail .user_info {
  flex: 5;
}
.address_detail .user_phone {
  flex: 3;
  text-align: right;
}
.cart_content .cart_title {
  font-size: 36rpx;
  padding: 20rpx;
  color: var(--themeColor);
  border-top: 1rpx solid currentColor ;
  border-bottom: 1rpx solid currentColor ;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart_content .cart_main .cart_item .cart_image_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart_content .cart_main .cart_item .cart_image_wrap image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_num {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_num .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_num .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_num .cart_num_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  border: 1rpx solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_num .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  border-top: 1rpx solid #ccc;
}
.footer_tool .all_chk_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer_tool .total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.footer_tool .order_pay_wrap {
  flex: 3;
  display: flex;
  color: white;
  font-size: 38rpx;
  align-items: center;
  justify-content: center;
  background-color: var(--themeColor);
}
